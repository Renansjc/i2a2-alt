# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
# OPENAI_MAX_TOKENS=  # Optional: leave empty for no limit

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here
# Database password for direct PostgreSQL connection (optional, defaults to service key)
SUPABASE_DB_PASSWORD=your-database-password-here

# Application Configuration
APP_ENV=development
APP_NAME=Multi-Agent NF-e System
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Chat Memory Configuration
# Number of messages to keep in history (2 interactions = 4 messages)
MAX_CHAT_HISTORY=4

# Batch Processing Configuration
XML_FOLDER=xml_nf
MAX_CONCURRENT_UPLOADS=5
BATCH_TIMEOUT_SECONDS=300

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=["*"]

# Database Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
